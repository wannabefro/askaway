<h1>{{question}}</h1>
{{#if complete}}
<h3>Voting is over</h3>
{{else}}
{{#if canEdit}}
  <button {{action update this}}>Close voting</button>
  <button {{action destroyRecord this}}>Delete poll</button>
  {{#link-to 'polls.edit'}}Edit Poll{{/link-to}}
{{/if}}
<ul>
  {{totalVotes}}
  {{#if hasNotVoted}}
    {{#each choices}}
      <li>{{text}} {{votes.length}} votes 
      <button {{action vote this}}>Vote</button></li>
    {{/each}}
  {{/if}}
</ul>
{{/if}}
